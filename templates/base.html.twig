<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Default title{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    {% block stylesheets %}{% endblock %}
    <style>
        @import '/css/flash.css';
        @import '/css/nav.css';
        @import '/css/pageStyle.css';
    </style>
</head>

<body>

<nav class="navbar navbar-expand-lg mb-5">
    <section class="mainBar">
        <ul class="navbar-nav ml-auto">
            {# if person is logged in their nav is this#}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {#<li class="nav-item" id="loggedIn">#}
            <li class="nav-item">
                <a class="nav-link {% block loginSuccessfulPage %}{% endblock %}" href="{{ url('login_success')  }}">Logged in</a>
            </li>

            {#<li class="nav-item">#}
                {#<a class="nav-link {% block homePage %}{% endblock %}" href="{{ url('homepage') }}">Home</a>#}
            {#</li>#}

            {#admin user is logged in#}
            {#{% if %}#}
            <li class="nav-item">
                <a class="nav-link {% block usersPage %}{% endblock %}" href="{{ url('homepage') }}">Users</a>
            </li>
            {#{% endif %}#}

            {#user user is logged in#}
            {#{% if %}#}
            <li class="nav-item">
                <a class="nav-link {% block booksPage %}{% endblock %}" href="{{ url('book_index') }}">Books</a>
            </li>
            {#{% endif %}#}


            <li class="nav-item">
                <a class="nav-link" href="{{ url('app_logout') }}">logout</a>
            </li>
            {% else %}
            {# non logged in person nav #}
            <ul class="navbar-nav ml-auto">

                <li class="nav-item">
                    <a class="nav-link {% block homePage %}{% endblock %}" href="{{ url('homepage') }}">Home</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link {% block bookPage %}{% endblock %}" href="{{ url('books_show') }}">Books</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link {% block loginPage %}{% endblock %}" href="{{ url('app_login') }}"> Login</a>
                </li>
                {% endif %}
            </ul>
    </section>
</nav>

