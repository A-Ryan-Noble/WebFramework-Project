{% extends 'base.html.twig' %}

{% block userPage %} current_page {% endblock %}

{% block title %}Users{% endblock %}

{% block body %}

    {% if users == null %}

        <h3> No Users were found</h3>

    {% else %}

        <h1>Users on the System</h1>

        <br>

        <table class="table">

            <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Password</th>
                <th id="tagCenterTH">Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for user in users %}
                <tr>
                    <td id ="item-id">{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.password }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}">More Details</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
    {% endif %}

    <hr>

    <h4><a href="{{ path('user_new') }}">Create a User/Admin</a></h4>

    <br>

{% endblock %}
