{% extends 'base.html.twig' %}

{% block userPage %} current_page {% endblock %}

{% block title %}Users{% endblock %}

{% block body %}
    <h1>Users on the System</h1>

    <br>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Roles</th>
            <th>Password</th>
            {#<th>Book(s):</th>#}
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">More Details</a>
                    {#<a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>#}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <hr>

    <h4><a href="{{ path('user_new') }}">Create a User/Admin</a></h4>

    <br>

{% endblock %}
