{% extends 'base.html.twig' %}

{% block booksPage %} current_page {% endblock %}

{% block title %}Accept Bid {% endblock %}

{% block body %}
    <h3>Do you wish to accept? </h3>

    <br>

    <table class="table">
        <tbody>
        <tr>
            <th>Title of Book</th>
            <td>{{ book.title }}</td>
        </tr>
        <tr>
            <th>Book Author</th>
            <td>{{ book.author }}</td>
        </tr>
        <tr>
            <th>Genre</th>
            <td>{{ book.genre }}</td>
        </tr>
        <tr>
            <th>Starting Bid</th>
            <td>€{{ book.startingBid }}</td>
        </tr>
        <tr>
            <th>Bid </th>
            <td>€{{ book.bid }} - by "{{ userBid }}"
                <form method="POST">
                    <input type="submit" value="Accept">
                </form>
            </td>
        </tr>

        </tbody>
    </table>

    <br>

    <hr id="pageHr">

    <h4><a href="{{ url('book_index') }}">Back to Book catalog</a></h4>

{% endblock %}
