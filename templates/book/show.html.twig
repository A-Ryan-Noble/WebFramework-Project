{% extends 'base.html.twig' %}

{% block booksPage %} current_page {% endblock %}


{% block title %}Showing Book{% endblock %}

{% block body %}
    <h1>Details of the Book: </h1>

    <br>

    <table class="table">
    <tbody>
    <tr>
        <th>Id</th>
        <td>{{ book.id }}</td>
    </tr>
    <tr>
        <th>Title</th>
        <td>{{ book.title }}</td>
    </tr>
    <tr>
        <th>Author</th>
        <td>{{ book.author }}</td>
    </tr>
    <tr>
        <th>Barcode</th>
        <td>{{ book.barcode }}</td>
    </tr>
    <tr>
        <th>Genre</th>
        <td>{{ book.genre }}</td>
    </tr>
    <tr>
        <th>StartingBid</th>
        <td>€ {{ book.startingBid }}</td>
    </tr>
    <tr>
        <th>Bid</th>
        <td>€ {{ book.bid }}</td>
    </tr>
    <tr>
        <th>Bid Accepted</th>
        {% if book.bidAccepted == true %}
            <td>€{{ book.bid }} bid was accepted</td>
        {% else %}
            <td>€ {{ book.bid }} bid was not accepted</td>
            {#<td>{{ book.bidAccepted ? 'Yes' : 'No' }}</td>#}
        {% endif %}
    </tr>
    <tr>
        <th>Comments</th>
        {% if book.comments == null %}
            <td><strong>No Comments</strong></td>
        {% else %}
            <ul>
                <td>{{ book.comments ? book.comments}}</td>
            </ul>
        {% endif %}
    </tr>
    <tr>
        <th>Answers</th>
        {% if book.answers == null %}
            <td><strong>No Answers</strong></td>
        {% else %}
            <ul>
                <td>{{ book.answers ? book.answers}}</td>
            </ul>
        {% endif %}
    </tr>
    </tbody>

    {% if is_granted('ROLE_USER')%}
        <tr>
            <th>Actions:</th>
            <td>
                <h4><a href="{{ url('book_edit', {'id': book.id}) }}">Edit</a></h4>
                {{ include('book/_delete_form.html.twig') }}
            </td>
        </tr>

        </tbody>
        </table>

       <br>
        <h4><a href="{{ url('book_comment', {'id': book.id}) }}">Comment</a></h4>

        <hr>

        <h4><a href="{{ url('all_books') }}">Back to Catalog page</a><br></h4>
    {% else %}

        </tbody>
        </table>

        <h4><a href="{{ url('book_index') }}">Back to Book catalog</a></h4>
    {% endif %}

{% endblock %}
