{% extends 'base.html.twig' %}

{% block booksPage %} current_page {% endblock %}

{% block title %}Book Catalog{% endblock %}

{% block body %}
    <h1>Available books</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Author</th>
            <th>Barcode</th>
            <th>Genre</th>
            <th>StartingBid</th>
            <th>Bid</th>
            <th>Bid Accepted</th>
            <th>Comment/Question</th>
            <th>Reply/Answer</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.barcode }}</td>
                <td>{{ book.genre }}</td>
                <td>€{{ book.startingBid }}</td>
                <td>€{{ book.bid }}</td>
                <td>{{ book.bidAccepted ? 'Yes' : 'No' }}</td>
                <td>{{ book.commentQuestion }}</td>
                <td>{{ book.answerQs }}</td>
                <td>
                    <a href="{{ url('book_show', {'id': book.id}) }}">show</a>
                    <a href="{{ url('book_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">No records were found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ url('book_new') }}">Create new</a>
{% endblock %}